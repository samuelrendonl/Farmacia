      <Button fx:id="btnLimpiarCarrito" layoutX="247.0" layoutY="708.0" mnemonicParsing="false" onAction="#limpiarCarritoAction" prefHeight="41.0" prefWidth="132.0" style="-fx-background-color: #145DA0; -fx-cursor: hand;" text="Limpiar Carrito" textFill="WHITE" />
